<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:background="@drawable/water"
                tools:context="com.mygdx.game.MainActivity">

    <Button
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:text="Start Game"
            android:textColor="#eef4f6"
            android:textSize="@dimen/activity_horizontal_margin"
            android:id="@+id/button"
            android:clickable="true"
            android:background="@drawable/menustart"
            android:layout_alignBottom="@+id/buttonInfo" android:layout_alignParentLeft="true"/>
    <Button
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:text="Game Information"
            android:textSize="@dimen/activity_horizontal_margin"
            android:id="@+id/buttonInfo"
            android:clickable="true"
            android:background="@drawable/menustart"
            android:textColor="#eef4f6"
            android:layout_centerVertical="true" android:layout_alignParentRight="true"/>

</RelativeLayout>
